<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/donate_image_view"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="16dp"
        android:tint="@drawable/donate_selector"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_donate"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/donate_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-16dp"
        app:layout_constraintTop_toBottomOf="@id/donate_image_view"
        app:layout_constraintStart_toStartOf="@id/donate_image_view"
        app:layout_constraintEnd_toEndOf="@id/donate_image_view"
        android:text="Donate"/>

    <Button
        android:id="@+id/btnTurnOff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Turn Off"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="12dip"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgSettingsIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:tint="@drawable/dark_primary_selector"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/outline_settings_24" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:indeterminate="false"
        style="?android:attr/progressBarStyleHorizontal"
        android:progressDrawable="@drawable/progress_drawable"
        android:max="100"
        android:progress="80"
        android:secondaryProgress="100"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_margin="24dp"
        app:layout_constraintTop_toBottomOf="@id/imgSettingsIcon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvTimerType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Next Wellness Check In"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/progressBarText"
        app:layout_constraintLeft_toLeftOf="@id/progressBarText"
        app:layout_constraintRight_toRightOf="@id/progressBarText"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/progressBarText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="23:35:46"
        android:textSize="64dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="@id/progressBar"
        app:layout_constraintLeft_toLeftOf="@id/progressBar"
        app:layout_constraintRight_toRightOf="@id/progressBar"
        app:layout_constraintBottom_toBottomOf="@id/progressBar"/>

    <TextView android:id="@+id/tvNextCheckIn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="at 08:00"
        android:textSize="30dp"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="@id/progressBarText"
        app:layout_constraintRight_toRightOf="@id/progressBarText"
        app:layout_constraintTop_toBottomOf="@id/progressBarText"/>

</androidx.constraintlayout.widget.ConstraintLayout>