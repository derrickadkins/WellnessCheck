<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progressBar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:max="10000"
        android:progress="8000"
        app:trackColor="@android:color/darker_gray"
        app:indicatorColor="@android:color/holo_blue_dark"
        app:trackThickness="24dp"
        app:trackCornerRadius="12dp"
        app:indicatorSize="300dp"/>

    <TextView
        android:id="@+id/progressBarText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="23:35:46"
        android:textSize="64dp"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/btnCallEmergencyNumber"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="@string/dial_911_now"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="12dip"
        android:textSize="22dp"/>

    <Button
        android:id="@+id/btnTurnOff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Turn Off"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="12dip"/>

    <TextView
        android:id="@+id/tvTimerType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next Wellness Check In"
        app:layout_constraintBottom_toTopOf="@+id/progressBarText"
        app:layout_constraintLeft_toLeftOf="@id/progressBarText"
        app:layout_constraintRight_toRightOf="@id/progressBarText"
        android:textSize="18dp"/>

    <TextView android:id="@+id/tvNextCheckIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="at 08:00"
        android:textSize="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/progressBarText"/>

    <ImageView
        android:id="@+id/imgSettingsIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/outline_settings_24" />

</androidx.constraintlayout.widget.ConstraintLayout>