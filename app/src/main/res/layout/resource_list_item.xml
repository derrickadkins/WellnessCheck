<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/contact_fragment"
    android:padding="10dp">

    <TextView
        android:id="@+id/resource_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resource Description"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/resource_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(999) 999 - 9999"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/resource_description"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/resource_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Swipe to call"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resource_description" />
</androidx.constraintlayout.widget.ConstraintLayout>