<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/contact_fragment"
    android:padding="10dp">

    <ImageView
        android:id="@+id/contact_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_contact_default"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/resource_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Name"
        android:textSize="20dp"
        android:layout_marginStart="18dp"
        app:layout_constraintStart_toEndOf="@id/contact_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/resource_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(999) 999 - 9999"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/resource_description"
        app:layout_constraintStart_toEndOf="@id/contact_image"/>

    <TextView
        android:id="@+id/tvAssignedRiskLvl"
        android:text="Assigned Risk Level"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/assigned_risk_lvl"
        android:text="Low"
        app:layout_constraintTop_toBottomOf="@id/tvAssignedRiskLvl"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>